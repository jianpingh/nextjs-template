# Environment Variables Template
# Copy this file to .env.local and configure your values

# API Base URL - Backend server endpoint
NEXT_PUBLIC_API_BASE_URL=http://your-api-server.com:8000

# App Configuration
NEXT_PUBLIC_APP_NAME=Order Management System

# Environment (development | production | test)
NODE_ENV=development

# Debug settings
NEXT_PUBLIC_DEBUG=true
NEXT_PUBLIC_LOG_LEVEL=debug

# Optional: Analytics and tracking
NEXT_PUBLIC_ANALYTICS_ENABLED=false

# Optional: Feature flags
NEXT_PUBLIC_FEATURE_X_ENABLED=false
